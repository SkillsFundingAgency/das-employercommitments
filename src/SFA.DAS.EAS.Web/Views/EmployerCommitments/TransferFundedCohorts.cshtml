@using SFA.DAS.EmployerCommitments.Web.ViewModels
@model SFA.DAS.EmployerCommitments.Web.OrchestratorResponse<TransferFundedCohortsViewModel>

@{
    ViewBag.Title = "Transfer-funded cohorts"; // Model.Data.PageTitle;
    ViewBag.Section = "apprentices";
    //todo: do we need to do something else for the pageid more than making one up?
    ViewBag.PageId = "transfer-funded-cohorts"; // Model.Data.PageId;
}

<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Transfer-funded Cohorts</h1>

        <p class="dynamic-heading">You have @Model.Data.Commitments.Count() cohorts to be paid via a transfer</p>

        <table class="tableResponsive to-be-sent-list">
            <thead>
                <tr>
                    <th>Sending employer</th>
                    <th>Training provider</th>
                    <th>Reference</th>
                    <th>Transfer status</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var commitment in Model.Data.Commitments)
                {
                <tr>
                    <td>
                        @commitment.SendingEmployer &nbsp;
                    </td>
                    <td>
                        @commitment.ProviderName &nbsp;
                    </td>
                    <td>
                        @commitment.HashedCommitmentId &nbsp;
                    </td>
                    <td>
                        @commitment.TransferApprovalStatus &nbsp;
                    </td>
                    <td>
                        @switch (commitment.ShowLink)
                        {
                            case ShowLink.Details:
                                <a href="@Url.Action("Details", new {commitment.HashedCommitmentId})" title="View cohort" aria-label="View cohort">Details</a>
                                break;
                            case ShowLink.Edit:
                                //todo: edit link
                                <a href="@Url.Action("Edit", new {commitment.HashedCommitmentId})" title="Edit cohort" aria-label="Edit cohort">Edit</a>
                                break;
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <a href="@Url.Action("YourCohorts", "EmployerCommitments")" aria-label="Back to Apprentices" class="back-link">Back to Apprentices</a>
    </div>
}

@section gaDataLayer {
    <script>
        sfa.dataLayer.vpv = '/accounts/apprentices/cohorts/transfer-funded-cohorts'; // Model.Data.PageId
    </script>
}